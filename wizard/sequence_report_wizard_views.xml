<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tag_sequence_report_wizard_form" model="ir.ui.view">
        <field name="name">tag.sequence.report.wizard.form</field>
        <field name="model">tag.sequence.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Informe CSV">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,preview,done"/>
                </header>
                <sheet>
                    <!-- PASO 1: SELECCION -->
                    <group invisible="state != 'draft'">
                        <group>
                            <field name="collection_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>

                    <!-- PASO 2: PREVISUALIZACION Y CONFIGURACION -->
                    <notebook invisible="state != 'preview'">
                        <page string="Datos (Previsualización)">
                            <div class="alert alert-info" role="alert">
                                Revise los datos. Puede modificar valores o borrar filas antes de exportar.
                            </div>
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="value"/>
                                    <field name="measure_type"/>
                                    <field name="tags_used"/>
                                </list>
                            </field>
                        </page>
                        <page string="Columnas / Exportación">
                            <div class="alert alert-warning" role="alert">
                                Configure qué columnas desea en el CSV y qué título deben tener.
                                Desmarque "Incluir" para ocultar una columna. Arrastre para reordenar.
                            </div>
                            <field name="column_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name"/>
                                    <field name="label"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <!-- PASO 3: DESCARGA -->
                    <group invisible="state != 'done'">
                        <field name="csv_filename" invisible="1"/>
                        <div class="alert alert-success" role="alert">
                            ¡Archivo generado correctamente!
                        </div>
                        <field name="csv_file" filename="csv_filename"/>
                    </group>

                </sheet>
                <footer>
                    <button name="action_calculate_preview" 
                            string="Calcular Previsualización" 
                            type="object" 
                            class="btn-primary" 
                            invisible="state != 'draft'"/>

                    <button name="action_generate_csv" 
                            string="Confirmar y Descargar CSV" 
                            type="object" 
                            class="btn-primary" 
                            invisible="state != 'preview'"/>

                    <button name="action_reset" 
                            string="Volver" 
                            type="object" 
                            class="btn-secondary" 
                            invisible="state != 'preview'"/>

                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tag_sequence_report_wizard" model="ir.actions.act_window">
        <field name="name">Generar Informe Secuencias</field>
        <field name="res_model">tag.sequence.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_tag_sequence_report"
              name="Informe CSV"
              parent="account.menu_analytic_accounting"
              action="action_tag_sequence_report_wizard"
              sequence="52"/>
</odoo>